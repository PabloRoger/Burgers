<link rel="stylesheet" href="/css/crear.css">
<body>
  <header>
    {{> navbar}}
  </header>
  <main>
    <div class="container burger-maker">
      <div class="row">
        <div class="col-lg-12">
          <h1>Crear Hamburguesa</h1>
        </div>
        <!-- Columna de ingredientes -->
        <div class="col-lg-4">
          <h2>Ingredientes</h2>
          <form id="ingredient-form">
            <div class="form-group">
              <label for="pan">Pan</label>
              <select class="form-control" id="pan">
                <!-- Opciones de pan -->
              </select>
            </div>
            <div class="form-group">
              <label for="carne">Carne</label>
              <select class="form-control" id="carne">
                <!-- Opciones de carne -->
              </select>
            </div>
            <div class="form-group">
              <label for="salsa">Salsa</label>
              <select class="form-control" id="salsa">
                <!-- Opciones de salsa -->
              </select>
            </div>
            <div class="form-group">
              <label for="queso">Queso</label>
              <select class="form-control" id="queso">
                <!-- Opciones de queso -->
              </select>
            </div>
            <div class="form-group">
              <label for="verduras">Verduras</label>
              <select class="form-control" id="verduras">
                <!-- Opciones de verduras -->
              </select>
            </div>
            <div class="form-group">
              <label for="toppings">Toppings</label>
              <select class="form-control" id="toppings">
                <!-- Opciones de toppings -->
              </select>
            </div>
          </form>
        </div>

        <!-- Columna de im치genes -->
        <div class="col-lg-4">
          <h2>Tu Hamburguesa</h2>
          <div id="burger-images">
            <!-- Im치genes de la hamburguesa -->
            <img src="/img/portada_header.png" alt="Pan Superior" id="burger-top" width="350px">
          </div>
        </div>

        <!-- Columna de resumen y formulario -->
        <div class="col-lg-4">
          <h2>Resumen y Creaci칩n</h2>
          <div id="burger-summary">
            <!-- Resumen de la hamburguesa -->
          </div>
          <form id="create-burger-form">
            <div class="form-group">
              <label for="dificultad">Dificultad</label>
              <input type="text" class="form-control" id="dificultad">
            </div>
            <div class="form-group">
              <label for="tiempo">Tiempo</label>
              <input type="text" class="form-control" id="tiempo">
            </div>
            <div class="form-group">
              <label for="descripcion">Descripci칩n</label>
              <textarea class="form-control" id="descripcion" rows="3"></textarea>
            </div>
            <div class="form-group">
              <label for="imagen">Subir Imagen</label>
              <input type="file" class="form-control-file" id="imagen">
            </div>
            <button type="submit" class="btn btn-primary">Crear Hamburguesa</button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <footer>
    {{> footer}}
  </footer>
</body>