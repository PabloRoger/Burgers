<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/Header.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/Registro.css" />
    <title>Entrar</title>
  </head>
  <body>
    <header>
      {{> navbar}}
    </header>
    <main>
      <div class="container pt-4 d-flex justify-content-center align-items-center contenedor">
        <div class="card formulario-contenedor">
          <div class="card-body">

            {{!-- FORM TO LOGIN --}}
            <form action="/api/v1/auth/login" method="POST">
              <div class="mb-3">
                <h1>Entrar</h1>

                <label for="username" class="form-label">Usuario</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  placeholder="usuario"
                />
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="contraseña"
                />
              </div>

              <div class="redirect">
                <a href="/register">¿No tienes cuenta? Regístrate</a>
              </div>

              <h4 class="mt-3" id="errorMessage"></h4>

              <div class="formulario-submit">
                <input type="submit" value="Enviar" />
              </div>
            </form>

          </div>
        </div>
      </div>
    </main>
    <footer>
      {{> footer}}
    </footer>
  </body>
</html>

<script src="/js/login.js"></script>